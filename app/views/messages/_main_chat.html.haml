.Main-content
  .Main-content__top
    .Group-name
      = @group.name
      .name
        .menbarlist 
          Menbar:
          - @group.users.each do |user|
            .menbar 
              = user.name
    .Edit-btn
      = link_to 'Edit', edit_group_path(@group) ,class: "Editlink"
  .Main-content__center
    = render @messages
    -# render partial:'message', locals: {message: @messages}
  .Main-content__bottom
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form
        .Form__input
          = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
          = f.label :image, class: 'Form__inputImage' do
            = icon('far', 'image', class: 'Form__icon')
            = f.file_field :image, class: 'Hidden'
        = f.submit 'Send', class: 'Form__submit'